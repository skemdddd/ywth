<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <com.example.dddkj.ywtx.Widget.Titlebar
        android:id="@id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.dddkj.ywtx.Widget.Titlebar>
    <com.example.dddkj.ywtx.Widget.MyScrollview
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.dddkj.ywtx.utils.ProgressActivity
            android:id="@+id/evaluate"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white"
            >
                <RadioGroup
                    android:id="@+id/evalute"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="26dp"
                >

                    <RadioButton
                        android:id="@+id/all_comments_tv"
                        android:layout_width="90dp"
                        android:layout_height="26.5dp"
                        android:background="@drawable/tab_evaluate"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:textColor="@color/tabText"
                        tools:text="全部"/>
                    <RadioButton
                        android:id="@+id/googs"
                        android:layout_width="90dp"
                        android:layout_height="26.5dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="-26.5dp"
                        android:background="@drawable/tab_evaluate"
                        android:button="@null"
                        android:gravity="center"
                        android:textColor="@color/tabText"
                        tools:text="好评"/>
                    <RadioButton
                        android:id="@+id/evaluation"
                        android:layout_width="90dp"
                        android:layout_height="26.5dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="-26.5dp"
                        android:background="@drawable/tab_evaluate"
                        android:button="@null"
                        android:gravity="center"  android:textColor="@color/tabText"
                        tools:text="中评"/>
                    <RadioButton
                        android:id="@+id/negative"
                        android:layout_width="90dp"
                        android:layout_height="26.5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/tabText"
                        android:button="@null"
                        android:gravity="center"
                        tools:text="差评"/>
                    <RadioButton
                        android:textColor="@color/tabText"
                        android:id="@+id/picture"
                        android:layout_width="90dp"
                        android:layout_height="26.5dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="-26.5dp"
                        android:background="@drawable/tab_evaluate"
                        android:button="@null" android:gravity="center"
                        tools:text="图片"/>


                </RadioGroup>


            </LinearLayout>
            <com.example.dddkj.ywtx.utils.ProgressActivity
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/comment_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" android:layout_marginTop="107dp">

                </android.support.v7.widget.RecyclerView>

            </com.example.dddkj.ywtx.utils.ProgressActivity>

        </com.example.dddkj.ywtx.utils.ProgressActivity>

    </com.example.dddkj.ywtx.Widget.MyScrollview>


</LinearLayout>
