<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textColor="@color/titleText"
            android:textSize="18sp"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
        <ImageView
            android:padding="13dp"
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:src="@mipmap/signin_back" android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/collect_rlyt"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/ll_customer_selector"
        android:clickable="true"
    >


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:text="头像"
            android:textColor="#333333"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp" android:src="@mipmap/personal_enter"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="11dp"
        android:id="@+id/collect_rlyt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ll_customer_selector"
        android:clickable="true"
    >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="12dp"
            android:text="昵称"
            android:textColor="#333333"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="昵称"
            android:textColor="#9f9f9f"
            android:textSize="15sp" android:layout_alignBottom="@+id/imageView5"
            android:layout_toLeftOf="@+id/imageView5" android:layout_toStartOf="@+id/imageView5"
            android:layout_marginRight="32dp" android:layout_marginEnd="32dp"/>
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp" android:src="@mipmap/personal_enter"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:id="@+id/sex_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ll_customer_selector"
        android:clickable="true"
    >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="12dp"
            android:text="性别"
            android:textColor="#333333"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="女"
            android:textColor="#9f9f9f"
            android:textSize="15sp" android:layout_alignBottom="@+id/imageView5"
            android:layout_toLeftOf="@+id/imageView5" android:layout_toStartOf="@+id/imageView5"
            android:layout_marginRight="32dp" android:layout_marginEnd="32dp"/>
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp" android:src="@mipmap/personal_enter"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:id="@+id/shipping_address_rlyt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ll_customer_selector"
        android:clickable="true"
    >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="12dp"
            android:text="收货地址"
            android:textColor="#333333"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp" android:src="@mipmap/personal_enter"/>
    </RelativeLayout>


</LinearLayout>