<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="管理收货地址"
            android:textColor="@color/titleText" android:textSize="18sp"/>
        <ImageView
            android:id="@+id/titleadd_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp" android:layout_marginStart="9dp"
            android:padding="13dp" android:src="@mipmap/signin_back"/>
        <TextView
            android:id="@+id/save_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="20dp"
            android:padding="6dp"
            android:text="保存"
            android:textColor="@color/white"
        />

    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/collect_rlyt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
    >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="收货人："
            android:textColor="#333333"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/uname_tv"
            android:textSize="15sp"
            android:background="@null"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"/>

    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/collect_rlyt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:clickable="true"
    >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="手机号："
            android:textColor="#333333"
            android:textSize="15sp"/>
        <EditText
            android:inputType="phone"
            android:id="@+id/utel_edit"
            android:textSize="15sp"
            android:background="@null"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/collect_area_rlyt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/ll_customer_selector"
        android:clickable="true"
    >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="12dp"
            android:text="所在地区"
            android:textColor="#333333"
            android:textSize="15sp"/>
        <TextView

            android:id="@+id/area_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="15sp"
            tools:text="12341231321321321321321321321321321321321356"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp" android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView4" android:layout_toEndOf="@+id/textView4"/>
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp" android:src="@mipmap/personal_enter"/>
    </RelativeLayout>


    <EditText
        android:id="@+id/address_edit"
      android:textSize="15sp"
      android:padding="10dp"
      android:background="@color/white"
      android:gravity="top"
      android:hint="详细地址"
      android:layout_marginTop="1dp"
      android:layout_width="match_parent"
      android:layout_height="150dp"/>


</LinearLayout>
