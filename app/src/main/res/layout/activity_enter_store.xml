<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark" android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/titleText"
            android:textSize="18sp" tools:text="登录"/>
        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp" android:layout_marginStart="9dp"
            android:padding="13dp" android:src="@mipmap/signin_back"/>
        <ImageView
            android:id="@+id/iminage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="20dp"
            android:padding="6dp"
            android:src="@mipmap/more"/>
        <ImageView
            android:id="@+id/seekimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="30dp"
            android:padding="8dp"
            android:src="@mipmap/classification"/>

    </RelativeLayout>
        <com.example.dddkj.ywtx.utils.ProgressActivity
            android:layout_marginTop="50dp"
            android:id="@+id/ProgressActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.scrollablelayout.ScrollableLayout
                android:id="@+id/sl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/about_store_rl"
                android:layout_width="match_parent"
                android:layout_height="128dp"
            >

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/shopbanner_iv"
                    tools:src="@mipmap/personal_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:background="#10000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/shoplogo_iv"
                    android:layout_width="66.5dp"
                    android:layout_height="66.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="10dp" tools:src="@mipmap/sign_in_logo"/>
                <TextView
                    android:id="@+id/shopNname_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/shoplogo_iv" android:layout_toRightOf="@+id/shoplogo_iv"
                    android:textColor="@color/white"
                    android:textSize="16sp" tools:text="极品小茶屋子"/>
                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:layout_toEndOf="@+id/shopNname_iv"
                    android:layout_toRightOf="@+id/shopNname_iv" android:src="@mipmap/shop_enter"/>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/imageButton3"
                              android:layout_alignLeft="@+id/shopNname_iv"
                              android:layout_alignStart="@+id/shopNname_iv">
                    <TextView
                        android:id="@+id/favoritesnum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        tools:text="收藏231"
                    />
                    <TextView
                        android:textColor="@color/white"
                        android:text="  |  "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ordernum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:textSize="13sp" tools:text="销量231"/>

                </LinearLayout>
                <ImageButton
                    android:background="@color/transparency"
                    android:src="@mipmap/shop_collection_unchecked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp" android:layout_alignTop="@+id/imageView8"
                    android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp" android:id="@+id/imageButton3"/>
            </RelativeLayout>


            <android.support.design.widget.TabLayout
                android:background="@color/white"
                android:layout_below="@+id/about_store_rl"
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                app:pstsShouldExpand="true"
                app:pstsUnderlineColor="@color/colorPrimaryDark"
            />

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f1f1f1" />

        </com.scrollablelayout.ScrollableLayout>


        </com.example.dddkj.ywtx.utils.ProgressActivity>







</RelativeLayout>