                android:layout_width="66.5dp"
                android:layout_height="66.5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:scaleType="fitXY"
                tools:src="@mipmap/sign_in_logo"/>
            <TextView
                android:id="@+id/shopNname_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/shoplogo_iv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp" android:layout_toEndOf="@+id/shoplogo_iv"
                android:layout_toRightOf="@+id/shoplogo_iv"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="极品小茶屋子"/>
            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/shoplogo_iv"
