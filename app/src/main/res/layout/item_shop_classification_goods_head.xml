<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <View android:layout_width="match_parent"
          android:layout_height="20dp">
    </View>
    <RelativeLayout
        android:id="@+id/first_classifction_rv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/ll_customer_selector"
        android:clickable="true"
    >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="12dp"
            android:text="全部商品"
            android:textColor="#333333"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp" android:src="@mipmap/personal_enter"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:layout_height="20dp">
    </View>

</LinearLayout>
