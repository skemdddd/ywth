<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/loginBackground"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="275dp">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/popularity_img"
            tools:src="@mipmap/sign_in_logo"
            android:layout_width="match_parent"
            android:layout_height="205dp"/>
        <TextView
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/moneyText"
            android:textColor="@color/moneyText"
            tools:text="实打实大苏打实打实大苏打和是的旧时的就是"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/nameText"
            tools:text="实打实大苏打实打实大苏打和是的旧时的就是实打实大苏打实打实大苏打和是的旧时的就是"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popularity_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
